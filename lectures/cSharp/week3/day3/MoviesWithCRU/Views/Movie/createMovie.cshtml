@{
    ViewData["Title"] = "Home Page";
}
@model Movie
<form action="/movie/createMovie" method="post">
    <section>
        <label for="Title">Title</label>
        <input type="text" name="Title" id="">
        <span asp-validation-for="Title"></span>
    </section>
    <section>
        <label for="Genre">Genre</label>
        <input type="text" name="Genre" id="">
        <span asp-validation-for="Genre"></span>
    </section>
    <section>
        <label action="Year">Year</label>
        <input type="number" name="Year" id="">
        <span asp-validation-for="Year"></span>
    </section>
    <section>
        <label for="Rating">Rating</label>
        <input type="number" name="Rating" id="">
        <span asp-validation-for="Rating"></span>
    </section>
    <section>
        <label for="Img">Link to Image</label>
        <input type="text" name="Img" id="">
        <span asp-validation-for="Img"></span>
    </section>
    <button>Add Movie</button>
</form>